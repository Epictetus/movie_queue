<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Download start</th>
    <th>Download finish</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.active %></td>
    <td><%= movie.download_start %></td>
    <td><%= movie.download_finish %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

