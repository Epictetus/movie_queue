<%= form_for(@movie) do |f| %>
    <p id="notice"><%= notice %></p>
    <% if @movie.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
          <ul>
            <% @movie.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :search_term %>
      <br/>
      <%= f.text_field :search_term %>
      <br/>
      <%= submit_tag "Fetch List from Rotten Tomatoes", :name => "rtfetch", :id => "rtfetch" %>
      <br/>
      <%= submit_tag "Fetch torrent list", :name => "tor_fetch", :id => "tor_fetch" %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.select(:name, ['Enter your query to get a list of movies'], {}, :disabled => true) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
